{
  "name": "astrobase.me",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "npm run build:docs && npm run build:site",
    "build:docs": "cd lib/astrobase && git checkout v0.5.0-beta.1 && npm ci && npm run build:docs",
    "build:site": "vite build",
    "ci": "npm run build && npm run lint",
    "format": "conc npm:format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:svelte-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "preview": "vite preview",
    "start": "npm run watch",
    "watch": "conc -k npm:watch:*",
    "watch:svelte-check": "svelte-kit sync && svelte-check --watch --tsconfig ./tsconfig.json",
    "watch:vite": "vite dev"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsparticles/slim": "^3.5.0",
    "@tsparticles/svelte": "^3.1.1",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "lucide-svelte": "^0.512.0",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.3.1"
  }
}
