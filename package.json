{
  "name": "astrobase.me",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "npm run build:docs && npm run build:site",
    "build:docs": "cd lib/astrobase && git checkout v0.4.0 && npm ci && npm run build:docs",
    "build:site": "vite build",
    "ci": "npm run build && npm run lint",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:svelte-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "preview": "vite preview",
    "start": "npm run watch",
    "watch": "conc -k npm:watch:*",
    "watch:svelte-check": "svelte-kit sync && svelte-check --watch --tsconfig ./tsconfig.json",
    "watch:vite": "vite dev"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsparticles/slim": "^3.5.0",
    "@tsparticles/svelte": "^3.1.1",
    "@types/eslint": "^8.56.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^0.21.13",
    "clsx": "^2.1.1",
    "concurrently": "9.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-compat": "^5.0.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.40.0",
    "lucide-svelte": "^0.452.0",
    "shadcn-svelte": "^0.14.0",
    "svelte": "^4.2.18",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^2.5.2",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.3.1"
  }
}
